{
  "name": "splitrail-vscode",
  "displayName": "Splitrail",
  "description": "Track AI coding assistant usage, costs, and tokens in real-time. A powerful alternative to ccusage with support for multiple tools. Monitors Claude Code, GitHub Copilot, Cline, Roo Code, Kilo Code, Codex CLI, Gemini CLI, Pi Agent, OpenCode, and Qwen Code. Features include: real-time cost tracking, token consumption analytics, per-model breakdowns, daily/weekly/monthly usage reports, file operation stats, tool call tracking, and a unified dashboard for all your AI coding assistants. See exactly how much you're spending on AI coding tools, which models consume the most tokens, and how your usage changes over time.",
  "version": "0.1.2",
  "publisher": "piebald",
  "icon": "resources/splitrail.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/piebald-ai/splitrail"
  },
  "homepage": "https://splitrail.dev",
  "bugs": {
    "url": "https://github.com/piebald-ai/splitrail/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "ai",
    "ai assistant",
    "ai coding",
    "ai tools",
    "agentic",
    "analytics",
    "anthropic",
    "api usage",
    "billing",
    "ccusage",
    "claude",
    "claude code",
    "cline",
    "codex",
    "codex cli",
    "copilot",
    "copilot chat",
    "cost",
    "cost tracking",
    "dashboard",
    "gemini",
    "gemini cli",
    "github copilot",
    "google",
    "gpt",
    "kilo code",
    "llm",
    "llm usage",
    "metrics",
    "monitor",
    "monitoring",
    "openai",
    "opencode",
    "pi agent",
    "qwen",
    "qwen code",
    "roo code",
    "spending",
    "stats",
    "statistics",
    "token",
    "token counter",
    "token tracking",
    "tokens",
    "tracking",
    "usage",
    "usage tracker",
    "vibe coding",
    "windsurf",
    "cursor"
  ],
  "activationEvents": [
    "onCommand:splitrail.openDashboard",
    "onCommand:splitrail.refresh",
    "onCommand:splitrail.openCloud",
    "onCommand:splitrail.showPopup",
    "onView:splitrailDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "splitrail.openDashboard",
        "title": "Splitrail: Open Dashboard"
      },
      {
        "command": "splitrail.refresh",
        "title": "Splitrail: Refresh Usage"
      },
      {
        "command": "splitrail.openCloud",
        "title": "Splitrail: Open Cloud Dashboard"
      },
      {
        "command": "splitrail.upload",
        "title": "Splitrail: Upload to Cloud"
      },
      {
        "command": "splitrail.showPopup",
        "title": "Splitrail: Show Usage Popup"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "splitrail",
          "title": "Splitrail",
          "icon": "resources/splitrail.svg"
        }
      ]
    },
    "views": {
      "splitrail": [
        {
          "id": "splitrailDashboard",
          "name": "Dashboard",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Splitrail",
      "properties": {
        "splitrail.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to the splitrail CLI binary. Leave empty to auto-detect (tries ../target/debug/splitrail, then PATH). Example: ../target/debug/splitrail"
        },
        "splitrail.liveUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Enable live updates - automatically refresh stats when AI tool data files change."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No tests configured\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.4.0"
  }
}
